<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class=".img-responsive">
          <img src="assets/img/burger-1674881_960_720.png" alt="Burger" style="width:250px; height: 250px;" align="center">
      </div>
          <h1>Eat Da Burger!</h1>
    </div>
  </div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers not eaten! (Fix that soon!)</h2>
    
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                {{this.burger_name}}

                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="True">
                  <button type="submit">Eat da Burger!</button>
                </form>  
        </form>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
      <h2>Yum that was a good burger!</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
              </form>

            </li>
          {{/if}}
        {{/each}}
      </ul>
      
    </div>
  </div>
</div>

    <h2>Add a Burger!</h2>
    <form class="create-update-form" action="/burgers/create" method="POST">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
      </div>
      <div class="form-group">
        <input type="hidden" name="devoured" value="0" checked>
        
      </div>
      <button type="submit">Add da Burger!</button>
    </form>
</div>